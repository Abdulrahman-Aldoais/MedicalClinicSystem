

@using MedicalClinicSystem.EF.Models;
@model patient





<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"></span>  ملف المريض
        </h4>
            @if (Model != null)
            {
          
            <div class="row">

                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row invoice-add">
                        <!-- Invoice Add-->
                        <div class="col-12 col-lg-9 mb-4 mb-lg-0">
                            <div class="card invoice-preview-card">
                                <div class="card-body">
                                    <div class="info-container">
                                        <h5 class="border-bottom pb-2 mb-4">التفاصيل</h5>
                                        <div class="info-container">
                                            <ul class="list-unstyled">
                                                <li class="mb-3">
                                                    <span class="fw-bold me-2">اسم المريض:</span>
                                                    <span>@Html.DisplayFor(model => model.Name)</span>
                                                </li>
                                                <li class="mb-3">
                                                    <span class="fw-bold me-2">رقم المريض :</span>
                                                    <span>@Html.DisplayFor(model => model.Id)</span>
                                                </li>

                                                <li class="mb-3">
                                                    <span class="fw-bold me-2">رقم الهاتف:</span>
                                                    <span>@Html.DisplayFor(model => model.Phone)</span>
                                                </li>
                                                <li class="mb-3">
                                                    <span class="fw-bold me-2">تاريخ الانشاء</span>
                                                    <span>@Html.DisplayFor(model => model.DateTime)</span>
                                                </li>

                                                <hr />

                                            </ul>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Invoice Add-->
                        <!-- Invoice Actions -->
                        <div class="invoice-actions col-12 col-lg-3">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <button onclick="location.href='@Url.Action("AllPatients", "Home")'" class="btn btn-primary d-grid w-100 mb-3">
                                        <span class="d-flex justify-content-center align-items-center text-nowrap"><i class=""></i>خروج</span>
                                    </button>

                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-body">
                                    <button onclick="location.href='@Url.Action("WritingPatientReport", "Home",new { id =Model.Id })'" class="btn btn-primary d-grid w-100 mb-3">
                                        <span class="d-flex justify-content-center align-items-center text-nowrap"><i class=""></i>إضافة تقرير</span>
                                    </button>

                                </div>
                            </div>

                        </div>
                        <!-- /Invoice Actions -->
                    </div>

                </div>
                <!-- / Content -->

                <div class="content-backdrop fade"></div>
            </div>

        }


        </div>
</div>

